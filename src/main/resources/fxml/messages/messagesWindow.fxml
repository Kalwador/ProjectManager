    <center>
        <JFXTabPane BorderPane.alignment="CENTER">
            <tabs>
                <Tab fx:id="inbox" text="Inbox">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
