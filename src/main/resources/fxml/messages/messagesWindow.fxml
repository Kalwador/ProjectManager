                </Tab>
            </tabs>
        </JFXTabPane>
    </center>
    <right>
        <VBox prefHeight="500.0" prefWidth="150.0" BorderPane.alignment="CENTER">
            <children>
                <JFXButton fx:id="deleteMessages" buttonType="RAISED" text="Delete message">
                    <VBox.margin>
                        <Insets left="20.0" />
                    </VBox.margin>
                </JFXButton>
                <Button fx:id="refresh" mnemonicParsing="false" text="Refresh">
                    <VBox.margin>
                        <Insets left="20.0" top="20.0" />
                    </VBox.margin>
                </Button>
            </children>
        </VBox>
    </right>
